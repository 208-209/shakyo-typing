extends layout

block content
  //- パンくずリスト
  ol(class="breadcrumb")
      li(class="breadcrumb-item")
        a(href="/") Home
      li(class="breadcrumb-item active") #{game.gameName}
    div(class="row")

  div(class="jumbotron")
    form(class="form-horizontal" method="post" action="/games/#{game.gameId}?edit=1")
      input(type="hidden" name="_csrf" value!="#{csrfToken}")
      div(class="form-group")
        label(class="col-sm-2 control-label" for="gameName") ゲームタイトル
        div(class="col-sm-9")
          input(id="gameName" class="form-control" type="text" name="gameName" value="#{game.gameName}")
        div(class="form-group")
          div(class="col-sm-1")
            button(class="btn btn-default" type="submit") 変更
      div(class="form-group")
        label(class="col-sm-2 control-label" for="tags") タグ
        div(class="col-sm-9")
          textarea(id="tags" class="form-control" name="tags" rows="3") #{game.tags}
        div(class="form-group")
          div(class="col-sm-1")
            button(class="btn btn-default" type="submit") 変更
      div(class="form-group")
        label(class="col-sm-2 control-label" for="editPrivacy") プライバシー
        div(class="col-sm-9")
          select(id="editPrivacy" class="form-control" name="privacy" data-privacy="#{game.privacy}")
            option(value="secret") 非公開
            option(value="public") 公開
        div(class="form-group")
          div(class="col-sm-1")
            button(class="btn btn-default" type="submit") 変更

  form(method="post" action="/games/#{game.gameId}/stages" class="form-horizontal")
    input(type="hidden" name="_csrf" value!="#{csrfToken}")
    div(class="form-group")
      label(class="col-sm-2 control-label" for="stageTitle") ステージタイトル
      div(class="col-sm-10")
        input(id="stageTitle" class="form-control" type="text" name="stageTitle" placeholder="ハローワールド" required)
    div(class="form-group")
      label(class="col-sm-2 control-label" for="stageContent") コンテンツ
      div(class="col-sm-10")
        textarea(id="stageContent" class="form-control" name="stageContent" rows="3" placeholder="console.log('Hello, World');" required)
    div(class="form-group")
      div(class="col-sm-offset-2 col-sm-10")
        button(class="btn btn-info" type="submit") ステージの追加
        p(class="help-block") ※複数追加することができます
    div(class="row")

  each stage in stages
    div(class="panel panel-default")
      div(class="panel-heading monospace")
        h4(class="panel-title") #{stage.stageTitle}
      div(class="panel-body monospace")
        p(class="panel-text") #{stage.stageContent}
      div(class="panel-footer")
        form(method="post" action="/games/#{game.gameId}/stages?delete=1")
          input(type="hidden" name="_csrf" value!="#{csrfToken}")
          input(type="hidden" name="stageId" value="#{stage.stageId}")
          button(class="btn btn-danger" type="submit") Delete

