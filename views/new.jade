extends layout

block content
  form(method="post" action="/games")
    div
      label(for="gameName") ゲーム名
      input(id="gameName" type="text" name="gameName")
    div
      label(for="tag") タブ(複数入力する場合は改行してください)
      textarea(id="tag" name="tag" cols="30" rows="10")
    div(class="btn-group pull-right")
      button(class="btn btn-warning" type="submit" name="privacy" value="0") 非公開で保存
      button(class="btn btn-info" type="submit" name="privacy" value="1") 公開で保存