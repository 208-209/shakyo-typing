doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous")
    link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous")
    link(rel='stylesheet' href='/stylesheets/style.css')
    title code-typing
  body
    nav(class="navbar navbar-inverse navbar-fixed-top")
      div(class="container")
        div(class="navbar-header")
          a(href="/" class="navbar-brand") code-typing
        div(class="collapse navbar-collapse" id="mainNav")
          form(method="get" action="/search" class="navbar-form navbar-left")
            div(class="form-group")
              input(type="text" class="form-control" name="q" placeholder="Search" size="30")
            button(type="submit" class="btn btn-default")
              i(class="fa fa-search" aria-hidden="true")
          ul(class="nav navbar-nav navbar-right")
            if user
              div(class="nav navbar-nav")
                a(href="/games/new" type="button" class="btn btn-success navbar-btn") ゲームを作る
            li(class="dropdown")
              if user
                case user.provider
                  when "google"
                    a(href="" class="dropdown-toggle" data-toggle="dropdown") #{user.displayName} 
                      span(class="caret")
                    ul(class="dropdown-menu")
                      li
                        a(href="/logout") ログアウト
                  when "twitter"
                    a(href="" class="dropdown-toggle" data-toggle="dropdown") #{user.username} 
                      span(class="caret")
                    ul(class="dropdown-menu")
                      li
                        a(href="/logout") ログアウト
                  when "github"
                    a(href="" class="dropdown-toggle" data-toggle="dropdown") #{user.username} 
                      span(class="caret")
                    ul(class="dropdown-menu")
                      li
                        a(href="/logout") ログアウト
              else
                a(href="/login") ログイン
    div(class="container")
      block content
    footer

    script(src="/javascripts/bundle.js")
