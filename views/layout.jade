doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous")
    link(rel='stylesheet' href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet' href='/stylesheets/style.css')
    title 写経タイピング
  body
    nav(class="navbar navbar-default navbar-fixed-top")
      div(class="container")
        div(class="navbar-header")
          a(href="/" class="navbar-brand")
            img(src="/images/brandImage.png" alt="brand" id="brandImage")
        div(class="collapse navbar-collapse" id="mainNav")
          form(method="get" action="/games" class="navbar-form navbar-left")
            div(class="form-group")
              input(type="text" class="form-control" name="q" placeholder="Search..." size="30")
            button(type="submit" class="btn btn-default")
              i(class="fa fa-search" aria-hidden="true")
          ul(class="nav navbar-nav navbar-right")
            div(class="nav navbar-nav")
              a(href="/games/new" type="button" class="btn btn-info navbar-btn") NEW GAME
            if user
              li(class="dropdown")
                case user.provider
                  when "google"
                    a(href="" class="dropdown-toggle userName" data-toggle="dropdown") #{user.displayName} 
                      img(src="#{user.photos[0].value}" alt="userImage" class="img-circle pull-left userImage")
                      span(class="caret")
                  when "twitter"
                    a(href="" class="dropdown-toggle userName" data-toggle="dropdown") #{user.username} 
                      img(src="#{user.photos[0].value}" alt="userImage" class="img-circle pull-left userImage")
                      span(class="caret")
                  when "github"
                    a(href="" class="dropdown-toggle userName" data-toggle="dropdown") #{user.username} 
                      img(src="#{user._json.avatar_url}" alt="userImage" class="img-circle pull-left userImage")
                      span(class="caret")
                ul(class="dropdown-menu")
                  li
                    a(href="/logout") ログアウト
            else
              li(class="dropdown")
                a(href="/login") ログイン
    div(class="container")
      block content
    script(src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js")
    script(src="/javascripts/bundle.js")
