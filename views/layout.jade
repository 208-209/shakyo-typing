doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous")
    link(rel='stylesheet' href='/stylesheets/style.css')
    title code-typing
  body
    nav(class="navbar navbar-default navbar-fixed-top")
      div(class="container")
        div(class="navbar-header")
          button(class="navbar-toggle" data-toggle="collapse" data-target="#mainNav")
            span(class="sr-only") ナビゲーション
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")
          a(href="/" class="navbar-brand") code-typing
        div(class="collapse navbar-collapse" id="mainNav")
          ul(class="nav navbar-nav")
          ul(class="nav navbar-nav navbar-right")
            if user
              div(class="nav navbar-nav")
                a(href="/games/new" type="button" class="btn btn-success navbar-btn") ゲームを作る
            li(class="dropdown")
              if user
                case user.provider
                  when "google"
                    a(href="" class="dropdown-toggle" data-toggle="dropdown") #{user.displayName} 
                      span(class="caret")
                    ul(class="dropdown-menu")
                      li
                        a(href="/users/#{user.id}/profile") プロフィール
                      li
                        a(href="/logout") ログアウト
                  when "twitter"
                    a(href="" class="dropdown-toggle" data-toggle="dropdown") #{user.username} 
                      span(class="caret")
                    ul(class="dropdown-menu")
                      li
                        a(href="/users/#{user.id}/profile") プロフィール
                      li
                        a(href="/logout") ログアウト
                  when "github"
                    a(href="" class="dropdown-toggle" data-toggle="dropdown") #{user.username} 
                      span(class="caret")
                    ul(class="dropdown-menu")
                      li
                        a(href="/logout") ログアウト
              else
                a(href="/login") ログイン
    div(class="container")
      block content
    footer

    script(src="/javascripts/bundle.js")
