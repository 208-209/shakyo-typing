extends layout

block content
  //- パンくずリスト
  ol(class="breadcrumb")
    li(class="breadcrumb-item active")
      a(href="/") Home
  //- タブ
  if user
    ul(class="nav nav-tabs")
      li
        a(href="/")
          i(class="fa fa-home" aria-hidden="true")  HOME
      li
        a(href="/users/#{user.id}")
          i(class="fa fa-user" aria-hidden="true")  #{user.username}
      li(class="active")
        a(href="/users/#{user.id}/favorites")
          i(class="fa fa-star" aria-hidden="true")  お気に入り
  //- パネル
  include includes/panel.jade
