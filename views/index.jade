extends layout

block content
  //- パンくずリスト
  ol(class="breadcrumb")
    li(class="breadcrumb-item active")
      a(href="/") Home
  //- タブ
  if user
    ul(class="nav nav-tabs")
      li(class="active")
        a(href="/") Home
      li
        a(href="/users/#{user.id}") user
      li
        a(href="/users/#{user.id}/favorites") favorites
  //- パネル
  include includes/panel.jade

